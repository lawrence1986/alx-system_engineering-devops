#!/usr/bin/env bash
# This script displays "Best School" 10 times, and on the 9th iteration, it also displays "Hi" on a new line

count=1
while [ "$count" -le 10 ]; do
    if [ "$count" -eq 9 ]; then
        echo -e "Best School\nHi"
    else
        echo "Best School"
    fi
    count=$((count + 1))
done
